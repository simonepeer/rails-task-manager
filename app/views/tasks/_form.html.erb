<div class="container">
  <%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.submit label, class: 'btn btn-primary' %>
  </div>

  <% if !@task.new_record? %>
    <div class="form-group">
      <%= t.check_box :completed %> Completed?
    </div>
    <% end %>
  <% end %>
</div>


